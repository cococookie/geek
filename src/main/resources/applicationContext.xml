<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">
    
    <bean id="student001"
          class="com.geek.study.spring.bean.Student">
        <property name="id" value="001" />
        <property name="name" value="stu001" />
    </bean>
    
    <bean id="student002"
          class="com.geek.study.spring.bean.Student">
        <property name="id" value="002" />
        <property name="name" value="stu002" />
    </bean>

    <bean id="class1" class="com.geek.study.spring.bean.Klass">
        <property name="studentList">
            <list>
                <ref bean="student001" />
                <ref bean="student002" />
            </list>
        </property>
    </bean>

    <bean id="school" class="com.geek.study.spring.bean.School"></bean>
    
    
    <bean id="aop1" class="com.geek.study.spring.aop.AopConfigTest" />
    
    <bean id="aop2" class="com.geek.study.spring.aop.AopAnnotationTest" />
    
    <aop:aspectj-autoproxy proxy-target-class="true" />
    <!--<aop:aspectj-autoproxy  />-->
    
    <aop:config>
        <aop:pointcut expression="execution(* com.geek.study.spring.inf.*.*(..))" id="p1" /> <!--切点-->
        <aop:aspect ref="aop1"> <!--切面 -->
            <aop:around method="around" pointcut-ref="p1" />
            <aop:before method="begin" pointcut-ref="p1" /> <!--前置通知-->
            <aop:after-returning method="end" pointcut-ref="p1"/> <!--后置通知-->
        </aop:aspect>
    </aop:config>

    <context:component-scan base-package="com.geek.study.spring" />

    <!--<context:annotation-config />-->

    
    
</beans>